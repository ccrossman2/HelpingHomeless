<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_facility_resource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chantele.homelesshelper.FacilityResource"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="125dp"
                android:layout_height="109dp"
                android:layout_marginEnd="60dp"
                app:srcCompat="@drawable/logo"
                android:id="@+id/imgLogo"
                android:contentDescription="@string/imgLogo"
                android:layout_marginStart="100dp" />

            <Button
                android:id="@+id/btnShelter"
                android:background="@drawable/btn_shelter"
                android:layout_height="75dp"
                android:layout_width="190dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp" />
            <Button
                android:id="@+id/btnHealth"
                android:background="@drawable/btn_health"
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:layout_marginStart="60dp" />

            <Button
                android:layout_height="75dp"
                android:id="@+id/btnJobs"
                android:background="@drawable/btn_jobs"
                android:layout_width="190dp"
                android:layout_marginStart="60dp" />

            <Button
                android:id="@+id/btnFood"
                android:background="@drawable/btn_food"
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:layout_marginEnd="47dp"
                android:layout_marginStart="60dp" />

            <ImageView
                android:layout_width="119dp"
                android:layout_height="34dp"
                android:id="@+id/imgCC"
                android:background="@drawable/copyrighttext1"
                android:contentDescription="@string/imgCC"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="60dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
